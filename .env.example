# API Keys
OPENAI_API_KEY=your_openai_key_here
HUGGINGFACE_API_KEY=your_huggingface_key_here

# Document processing settings
PDF_EXTRACTION_QUALITY=high  # high, medium, low
ENABLE_OCR=true
MAX_CONCURRENT_PROCESSES=4

# Security settings
ENABLE_INPUT_VALIDATION=true
MAX_FILE_SIZE_MB=50
ALLOWED_FILE_EXTENSIONS=pdf,docx,html,txt,md

# Vector database settings (if using external)
VECTOR_DB_HOST=localhost
VECTOR_DB_PORT=6333
VECTOR_DB_API_KEY=your_vector_db_key_here

# Logging
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_FORMAT=json  # json, text

# Output settings
DEFAULT_OUTPUT_FORMATS=pdf,mediawiki,json

# Example environment variables for Document Unification System
# Copy this file to .env and fill in your real credentials (never commit .env)

SUPABASE_URL=
SUPABASE_KEY=

